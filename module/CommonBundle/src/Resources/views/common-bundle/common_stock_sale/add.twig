{% extends 'common/layout.twig' %}

{% block content %}
    <div class="page-header">
        <h1>Verkoop Toevoegen <small>een verkocht item aan <em>{{ activity.getName() }}</em> toevoegen</small></h1>
    </div>

    <div class="row">
        <div class="span3 columns">
            <p>Hier kan je een verkoop toevoegen aan Verkoopbeheer.</p>
            <a href="{{ url('common_activity', {'action': 'view', 'id': activity.getId()}) }}" class="btn">Terug</a>
        </div>
        <div class="span9 columns">
            {% autoescape false %}
                {{ form }}
            {% endautoescape %}
        </div>
    </div>
{% endblock %}